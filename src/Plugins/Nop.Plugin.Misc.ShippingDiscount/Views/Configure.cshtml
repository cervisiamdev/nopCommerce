@model Nop.Plugin.Misc.ShippingDiscount.Models.ShippingDiscountConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ShippingDiscountAdmin" asp-action="Configure" method="post" id="configuration-form">
    <div class="panel panel-default">
        <div class="panel-heading">Shipping description</div>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="@Model.Description"/>
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="@Model.Description"/>
                    <span asp-validation-for="@Model.Description"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                </div>
            </div>
        </div>
    </div>
</form>